//Sum of Numbers using Recursion

#include <stdio.h>
#include <stdlib.h>

int add(int);

int main()
{
    int n;
    printf("please enter value of n: ");
    scanf("%d",&n);

    printf("\n");
    printf("Sum is %d",add(n));
    printf("\n");
    return 0;
}

int add(int n)
{
    if(n==0)
    {
      return 0;
    }
    else
    {
      return add(n-1)+n;
    }
    return 0;
}
