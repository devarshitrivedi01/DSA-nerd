#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct element
{
    int r;
    int c;
    int num;
};

struct sparse
{
    int nr;
    int nc;
    int tot;
    struct element *e;
};

void create(struct sparse *s)
{
    int i;
    printf("\n Enter number of rows: ");
    scanf("%d",&s->nr);
    printf("\n enter number of columns: ");
    scanf("%d",&s->nc);
    printf("\n Enter Total non-zero Elements: ");
    scanf("\n %d",&s->tot);
    s->e=(struct element*)malloc((s->tot)*sizeof(struct element));
    printf("\n Enter non-zero elements");
    for(i=0;i<s->tot;i++)
    {
        printf("\n enter row: ");
        scanf("%d",&s->e[i].r);
        printf("enter column: ");
        scanf("%d",&s->e[i].c);
        printf("enter number: ");
        scanf("%d",&s->e[i].num);
        printf("\n");
    }
}

void add(struct sparse *s1,struct sparse *s2)
{
    int i,j,k;
    i=j=k=0;
    struct sparse s3;
    s3.e=(struct element*)malloc(((s1->tot)+(s2->tot))*sizeof(struct element));
    s3.nr=s1->nr;
    s3.nc=s1->nc;
    s3.tot=(s1->tot)+(s2->tot);
    while(i<s1->tot && j<s2->tot)
    {
        if(s1->e[i].r<s2->e[j].r)
        {
            s3.e[k++]=s1->e[i++];
        }
        else if(s2->e[j].r<s1->e[i].r)
        {
            s3.e[k++]=s2->e[j++];
        }
        else
        {
            if(s1->e[i].c<s2->e[j].c)
            {
               s3.e[k++]=s1->e[i++];
            }
            else if(s2->e[j].c<s1->e[i].c)
            {
               s3.e[k++]=s2->e[j++];
            }
            else
            {
                s3.e[k]=s1->e[i];
                s3.e[k++].num=s1->e[i++].num+s2->e[j++].num;
            }
        }
    }
    for(;i<s3.tot;i++)
    {
        s3.e[k++]=s1->e[i];
    }
    for(;j<s3.tot;j++)
    {
        s3.e[k++]=s2->e[j];
    }
    k=0;
    for(i=1;i<=s3.nr;i++)
    {
        for(j=1;j<=s3.nc;j++)
        {
            if(i==s3.e[k].r && j==s3.e[k].c)
            {
                printf("%d ",s3.e[k++].num);

            }
            else
            {
                printf("0 ");
            }
        }
        printf("\n");
    }
    free(s3.e);
}

void display(struct sparse s)
{
    int i,j,k=0;
    i=j=0;
    for(i=1;i<=s.nr;i++)
    {
        for(j=1;j<=s.nc;j++)
        {
            if(i==s.e[k].r && j==s.e[k].c)
            {
                printf("%d ",s.e[k++].num);

            }
            else
            {
                printf("0 ");
            }
        }
        printf("\n");
    }
}


int main()
{
  struct sparse s1,s2;
  create(&s1);
  display(s1);
  create(&s2);
  display(s2);
  printf("\n");
  add(&s1,&s2);
  return 0;
}

